{
  "name": "there-will-come-soft-rains",
  "description": "A small game about climate change and making sacrifices. Entry for the Ludum Dare 43.",
  "version": "1.1.0",
  "homepage": "https://ldjam.com/events/ludum-dare/43/there-will-come-soft-rains",
  "main": "server",
  "directories": {
    "lib": "server",
    "test": "test/"
  },
  "engines": {
    "node": "^10.12.0",
    "yarn": ">= 1.0.0"
  },
  "stylelint": {
    "extends": [
      "./config/.stylelintrc.yaml"
    ]
  },
  "scripts": {
    "client:build": "webpack --config config/webpack/production.babel.js --colors --progress",
    "client:build:full": "webpack --config config/webpack/production-full.babel.js --colors --progress",
    "client:dev": "webpack-dev-server --config config/webpack/devserver.babel.js --colors --progress --watch | grep -v  \"\\[built\\]\" | grep -v icons-",
    "server": "node server",
    "server:dev": "NODE_ENV=development NODE_CONFIG_DIR=server/config nodemon server/index.js -w server --exec babel-node",
    "test": "yarn run lint:eslint && yarn run lint:flow && yarn run lint:flow:stop && yarn run mocha",
    "install:all": "yarn install; for script in flow; do yarn install:$script; done",
    "install:flow": "npx flow-typed install",
    "upgrade:all": "yarn upgrade; for script in flow; do yarn upgrade:$script; done",
    "upgrade:flow": "npx flow-typed update-cache; npx flow-typed install",
    "lint:eslint": "eslint server/. test/. --config config/.eslintrc.yaml",
    "lint:flow": "npx flow status",
    "lint:flow:stop": "npx flow stop",
    "update-flow-types": "npx flow-typed install",
    "mocha": "mocha test/ --recursive --exit --compilers js:babel-register"
  },
